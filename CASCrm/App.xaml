<Application x:Class="CASCrm.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	StartupUri="Views.StartupWindow.xaml">
	<Application.Resources>
		 <Style x:Key="DataGridRowStyleBig"
			TargetType="DataGridCell">
			<Style.Triggers>
				<Trigger
					Property="DataGridCell.IsSelected"
					Value="True">
					<Setter
						Property="Background"
						Value="DarkCyan"></Setter>
					<Setter
						Property="BorderBrush"
						Value="DarkCyan"></Setter>
				</Trigger>
			</Style.Triggers>
		</Style>
	</Application.Resources>
</Application>